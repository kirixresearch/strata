    <Icon Id="kstrata.exe" SourceFile="$(env.buildsrc)\bin\kstrata.exe"/>


    <Property Id="ARPPRODUCTICON">kstrata.exe</Property>
    <Property Id="ARPURLINFOABOUT"><![CDATA[http://www.kirix.com]]></Property>
    
